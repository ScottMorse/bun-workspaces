{
  "name": "@bw/root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bw:test": "bun cli run -N test bw",
    "bw:build": "bun cli run -N build bw",
    "bw:build:test": "bun cli run -N build:test bw",
    "docs:dev": "bun cli run -N dev doc-website",
    "docs:build": "bun cli, run -N build doc-website",
    "docs:build:dev": "bun cli run -N build:dev doc-website",
    "docs:preview": "bun cli run -N preview doc-website",
    "cli": "bun --silent --cwd=./packages/bun-workspaces run cli --cwd=../..",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "type-check": "bun --cwd=./packages/bun-workspaces run type-check && bun --cwd=./packages/doc-website run type-check"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "prettier": "^3.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
