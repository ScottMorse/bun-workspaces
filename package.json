{
  "name": "@bw/root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bw": "bun cli run -N -SW bw",
    "bw:test": "bun cli run -N test bw --",
    "bw:build": "bun cli run -N build bw --",
    "bw:build:test": "bun cli run -N build:test bw --",
    "docs": "bun cli run -N -W docs",
    "docs:dev": "bun cli run -N dev doc-website --",
    "docs:build": "bun cli run -N build doc-website --",
    "docs:build:dev": "bun cli run -N build:dev doc-website --",
    "docs:preview": "bun cli run -N preview doc-website --",
    "sandbox": "bun cli run -N -SW sandbox",
    "sandbox:cli:local": "bun --cwd=./packages/sandbox run cli:local",
    "sandbox:cli:release": "bun --cwd=./packages/sandbox run cli:release",
    "sandbox:api:local": "bun cli run api:local sandbox -N --",
    "sandbox:api:release": "bun cli run api:release sandbox -N --",
    "cli": "bun --silent --cwd=./packages/bun-workspaces run cli --cwd=../..",
    "cli:build": "bun --silent --cwd=./packages/bun-workspaces run cli:build --cwd=../..",
    "lint": "bun cli run lint -P --",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "type-check": "bun cli run type-check -P --"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
