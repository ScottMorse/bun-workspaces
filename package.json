{
  "name": "@bw/root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/bun-workspaces"
  ],
  "scripts": {
    "bw": "bun --silent --cwd=./packages/bun-workspaces",
    "docs": "bun --silent --cwd=./packages/doc-website",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "bun --cwd=./packages/doc-website install --frozen-lockfile # cannot install as normal workspace (rspress/rslib dep conflicts)"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@rslib/core": "^0.15.1",
    "@types/bun": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "glob": "^11.0.3"
  }
}
