{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // All directly from recommended config in rspress docs
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false
  },
  "paths": {
    "@/*": ["./src/*"]
  },
  "include": ["src"],
  "mdx": {
    "checkMdx": true
  }
}
