{
  "name": "bun-workspaces",
  "version": "1.0.0-alpha.17",
  "main": "src/index.ts",
  "private": true,
  "homepage": "https://bunworkspaces.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/ScottMorse/bun-workspaces.git"
  },
  "bin": {
    "bun-workspaces": "bin/cli.js",
    "bw": "bin/cli.js"
  },
  "custom": {
    "bunVersion": {
      "build": "1.3.1",
      "libraryConsumer": "^1.1.x"
    }
  },
  "scripts": {
    "cli": "bun --silent run bin/cli.js",
    "cli:dev": "_BW_RUNTIME_MODE=development bun --silent run bin/cli.js",
    "lint": "eslint src",
    "build": "bun run scripts/build.ts",
    "build:test": "BUILD_INCLUDE_TESTS=true bun run scripts/build.ts && chmod +x dist.test/bin/cli.js && cd dist.test && bun install && bun test && cd .. && rm -rf dist.test",
    "build:rslib-only": "rslib build",
    "type-check": "tsc --noEmit",
    "publish-build:dry-run": "DRY_RUN=true bun run scripts/publish.ts",
    "publish-build:npm": "bun run scripts/publish.ts"
  },
  "devDependencies": {
    "@rslib/core": "^0.15.1",
    "bun-workspaces": "file:."
  },
  "dependencies": {
    "commander": "^12.1.0",
    "glob": "^11.0.3"
  }
}
